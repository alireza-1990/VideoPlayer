<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/space_1"
    android:layout_marginLeft="@dimen/space_1"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/item_playlist_delete"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_delete_forever_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/space_0.5"
        />

    <TextView
        android:id="@+id/item_playlist_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/item_playlist_delete"
        style="@style/TextView.PlaylistItemTitle"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/separator"
        />

</RelativeLayout>