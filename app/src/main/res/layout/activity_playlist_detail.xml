<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alirezaahmadi.videoplayer.activity.PlayListDetailActivity"
    android:background="@color/default_background"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/playlist_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/elevation_toolbar"
        app:titleTextColor="@color/white"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/play_list_detail_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/space_1"
        android:clipToPadding="false"
        android:layout_below="@id/playlist_detail_toolbar"
        />

    <TextView
        android:id="@+id/play_list_detail_empty_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_2"
        android:layout_centerInParent="true"
        android:text="@string/empty_playlist"
        android:gravity="center"
        android:textSize="@dimen/text_size_xlarge"
        android:visibility="gone"
        />


</RelativeLayout>
